<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/assignment_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:checkable="true"
    android:layout_margin="8dp">

    <LinearLayout
        android:id="@+id/assignment_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/assignment_frame_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_drawable">

            <ImageView
                android:id="@+id/assignment_iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_miscellaneous_services_black_24dp"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/assignment_ll_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/assignment_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/assignment_tv_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7/10/20"
                android:textAppearance="?attr/textAppearanceBody1"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/assignment_tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Lorem ipsum dolor sit amet"
                android:textAppearance="?attr/textAppearanceBody2"
                android:maxLines="2"
                android:ellipsize="end"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/assignment_iv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_done_black_24dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>